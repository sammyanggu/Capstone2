{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child($uid).child('quizScore').exists() === true",
        ".write": "$uid === auth.uid",
        "progress": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "preferences": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "stats": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "displayName": {
          ".read": true
        },
        "email": {
          ".read": true
        },
        "quizScore": {
          ".read": true
        },
        "quizzesCompleted": {
          ".read": true
        },
        "rank": {
          ".read": true
        }
      }
    },
    "lessons": {
      ".read": true
    }
  }
}
