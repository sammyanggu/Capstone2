{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth.uid === $uid || auth != null",
        ".write": "auth.uid === $uid",
        "progress": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        },
        "preferences": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        },
        "stats": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        }
      }
    },
    "lessons": {
      ".read": true
    }
  }
}
